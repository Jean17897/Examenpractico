<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1DFDF"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="372dp"
        android:layout_height="441dp"
        android:layout_marginTop="36dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:barrierAllowsGoneWidgets="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/open_sans_light"
            android:text="Prime Steak House (Costa del Este)"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Costa del Este"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:freezesText="false"
            android:text="Reserva a nombre de Jorge Andres Rojas"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="#039BE5"
            android:text="50% OFF Miembro Foodie"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@drawable/stilo_borde"
                    android:drawableTop="@drawable/ic_calendario_reservation_black_2"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Miercoles 4"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@drawable/stilo_borde"
                    android:drawableTop="@drawable/ic_relojito_reservation_black_2"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="12:00 Pm"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@drawable/stilo_borde"
                    android:drawableTop="@drawable/ic_personas_reservation_black_2"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="2 Personas"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </TableRow>

        </LinearLayout>

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:drawableStart="@drawable/ic_edit_phone_gray"
            android:drawableEnd="@drawable/ic_pencil_black"
            android:ems="10"
            android:hint="66479404"
            android:inputType="phone"
            android:textColor="#979393" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:drawableStart="@drawable/ic_bubble_comment_gray"
            android:drawableEnd="@drawable/ic_pencil_black"
            android:ems="10"
            android:hint="Comentario"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Button
        android:id="@+id/btnreserva"
        android:layout_width="375dp"
        android:layout_height="75dp"
        android:backgroundTint="#1E88E5"
        android:backgroundTintMode="screen"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Actualizar Reserva "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/button2"
        android:layout_width="375dp"
        android:layout_height="75dp"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="screen"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Cancelar Reserva"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#B1ACAC"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnreserva"
        app:layout_constraintVertical_bias="0.354" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_reservations_blue_round" />



</androidx.constraintlayout.widget.ConstraintLayout>